<?xml version="1.0" encoding="utf-8"?>
<com.reducetechnologies.reduction.home_screen.ui.encyclopedia.main.InterceptingMaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCard"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="4dp"
    >

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_horizontal_margin"
        android:layout_marginEnd="@dimen/material_horizontal_margin"
        style="@style/Subtitle1"
        android:id="@+id/probe"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:text="@string/text_size_probe"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_horizontal_margin"
        android:layout_marginEnd="@dimen/material_horizontal_margin"
        style="@style/Subtitle1"
        android:id="@+id/itemName"
        android:layout_gravity="center"
        />
    <com.judemanutd.katexview.KatexView
        android:layout_marginStart="@dimen/material_horizontal_margin"
        android:layout_marginEnd="@dimen/material_horizontal_margin"
        android:id="@+id/itemNameMath"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:clickable="true"
        android:focusable="true"
    />
</com.reducetechnologies.reduction.home_screen.ui.encyclopedia.main.InterceptingMaterialCardView>