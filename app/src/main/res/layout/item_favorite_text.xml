<?xml version="1.0" encoding="utf-8"?>
<com.reducetechnologies.reduction.home_screen.ui.encyclopedia.main.InterceptingMaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:maxHeight="200dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="4dp">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_horizontal_margin"
        android:layout_marginEnd="@dimen/material_horizontal_margin"
        style="@style/Subtitle1"
        android:textSize="@dimen/card_text_size"
        android:id="@+id/itemName"
        android:layout_gravity="center"
        />
</com.reducetechnologies.reduction.home_screen.ui.encyclopedia.main.InterceptingMaterialCardView>