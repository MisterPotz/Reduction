<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorSecondaryText</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <item name="colorError">#F74A3C</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">@color/colorPrimaryLight</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Default app theme. Change it only via changing the parent -->
    <style name="AppThemeDefault" parent="AppTheme">
    </style>

    <!--Default BottomNavigationView style -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
<!--        <item name="android:background">@color/colorPrimary</item>-->
<!--        <item name="itemIconTint">@color/bottom_menu_item_color</item>-->
<!--        <item name="itemTextColor">@color/bottom_menu_item_color</item>-->
    </style>

    <style name="ButtonDefault" parent="Widget.MaterialComponents.Button">

    </style>

    <style name="TextViewDefault" parent="TextAppearance.MaterialComponents.Body1">
<!--        <item name="android:colorAccent">@color/colorPrimaryText</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
