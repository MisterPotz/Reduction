        <!--        <item name="android:background">@color/background</item>-->
<!--        <item name="android:toolbarStyle">@style/ActionBar</item>-->
    </style>

    <!-- Default app theme. Change it only via changing the parent -->

    <style name="ActionBar" parent="@style/Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>


    <!--Default BottomNavigationView style -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <!--        <item name="android:background">@color/colorPrimary</item>-->
        <!--        <item name="itemIconTint">@color/bottom_menu_item_color</item>-->
        <!--        <item name="itemTextColor">@color/bottom_menu_item_color</item>-->
        <!--        <item name="android:background">@color/background</item>-->
        <!--        <item name="itemBackground">@color/background</item>-->
    </style>

    <style name="ButtonDefault" parent="Widget.MaterialComponents.Button">

    </style>

    <style name="TextViewDefault" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BaseText">
        <item name="android:textColorPrimary">@color/colorOnSecondary</item>
    </style>


    <style name="BaseText.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="BaseText.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>
    
    <style name="BaseText.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>
</resources>

